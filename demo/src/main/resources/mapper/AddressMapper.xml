<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.AddressMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.Address">
            <id property="id" column="id" />
            <result property="address" column="address" />
            <result property="cityId" column="city_id" />
            <result property="areaId" column="area_id" />
            <result property="createTime" column="create_time" />
            <result property="modifedTime" column="modifed_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,address,city_id,area_id,create_time,modifed_time
    </sql>

    <select id="selectByCityId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT * FROM address WHERE city_id = #{cityId}
    </select>

    <insert id="addAddress" keyColumn="id" keyProperty="id" parameterType="com.example.demo.entity.Address">
        insert into address (address,city_id,area_id,create_time)
        values (#{address,jdbcType=VARCHAR},#{cityId,jdbcType=INTEGER},#{areaId,jdbcType=INTEGER},#{createTime,jdbcType=TIMESTAMP})
    </insert>
    <delete id="deleteAddressById" parameterType="java.lang.Integer">
        delete from address
        where id = #{id,jdbcType=INTEGER}
    </delete>
</mapper>
